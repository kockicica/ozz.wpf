        <!-- <SolidColorBrush x:Key="SystemControlBackgroundBaseLowBrush" Color="{StaticResource SystemBaseLowColor}" /> -->
        <!-- <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="{StaticResource SystemBaseHighColor}" Opacity="0.8" /> -->
        

        <StaticResource x:Key="FocusVisualBrush" ResourceKey="SystemAccentColor" />

        <SolidColorBrush x:Key="ThemeBackgroundColor" Color="#F2FBFF" />
        <!-- <SolidColorBrush x:Key="MainWindowChromeBackground" Color="#8b2635" /> -->
        <SolidColorBrush x:Key="MainWindowChromeBackground" Color="{DynamicResource ThemeLow}" />
        
        <!-- focus adorner -->
        <!-- <SolidColorBrush x:Key="SystemControlFocusVisualPrimaryBrush" Color="{DynamicResource FocusVisualBrush}"></SolidColorBrush> -->
        <SolidColorBrush x:Key="SystemControlFocusVisualPrimaryBrush" Color="{DynamicResource ThemeLow}" />


        <SolidColorBrush x:Key="DataGridColumnHeaderBackgroundBrush" Color="Transparent" />
        <SolidColorBrush x:Key="DataGridCellFocusVisualPrimaryBrush" Color="{DynamicResource FocusVisualBrush}" />


        <SolidColorBrush x:Key="DataGridRowSelectedUnfocusedBackgroundColor" Color="{DynamicResource FocusVisualBrush}" />
        <sys:Double x:Key="DataGridRowSelectedUnfocusedBackgroundOpacity">0.2</sys:Double>

        <SolidColorBrush x:Key="DataGridRowSelectedHoveredUnfocusedBackgroundColor" Color="{DynamicResource FocusVisualBrush}" />
        <sys:Double x:Key="DataGridRowSelectedHoveredUnfocusedBackgroundOpacity">0.2</sys:Double>

        <SolidColorBrush x:Key="DataGridRowSelectedBackgroundColor" Color="{DynamicResource FocusVisualBrush}" />
        <sys:Double x:Key="DataGridRowSelectedBackgroundOpacity">0.2</sys:Double>

        <SolidColorBrush x:Key="DataGridRowSelectedHoveredBackgroundColor" Color="{DynamicResource FocusVisualBrush}" />
        <sys:Double x:Key="DataGridRowSelectedHoveredBackgroundOpacity">0.2</sys:Double>

        
        <!-- <SolidColorBrush x:Key="TextControlBorderBrushFocused" Color="{DynamicResource FocusVisualBrush}"></SolidColorBrush> -->
        <SolidColorBrush x:Key="TextControlBorderBrushFocused" Color="{DynamicResource SystemAccentColor}"/>
        
