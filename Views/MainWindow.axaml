<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ozz.wpf.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:ozz.wpf.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ozz.wpf.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        WindowStartupLocation="CenterScreen"
        Title="ozz.wpf">
    
    <Window.Styles>
        <Style Selector="Grid#Overlay">
            <Setter Property="IsVisible" Value="{Binding OverlayVisible}"></Setter>
        </Style>
    </Window.Styles>

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>
    <Grid x:Name="LayoutRoot">

        <Grid x:Name="Overlay" Panel.ZIndex="1000">
            <Grid.Background>
                <SolidColorBrush Color="Black" Opacity=".4"/>
            </Grid.Background>
        
            <!-- Add controls as needed -->
        </Grid>

        <!-- Use whatever layout you need -->
        <ContentControl x:Name="MainContent" Content="{Binding Disposition}" />

    </Grid>    
    <!-- <Panel> -->
    <!--     <ContentControl Content="{Binding Disposition}" ZIndex="100"></ContentControl> -->
    <!-- </Panel> -->
    <!-- <views:DispositionView DataContext="{Binding Disposition}"/> -->

</Window>
